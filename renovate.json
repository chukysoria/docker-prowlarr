{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies", "no-stale"],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "assignees": ["chukysoria"],
  "customManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$", "(^|/)build.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|armv7|x86_64):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\\s(?<package>[a-z0-9][a-z0-9-_]+)=(?<currentValue>[a-z0-9-_.]+)(\\s+|,)"
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_18/{{package}}"
    },
    {
      "fileMatch": ["(^|/)Dockerfile$", "(^|/)config.yaml$"],
      "matchStrings": [
        "ARG BUILD_EXT_RELEASE=[\"']?(?<currentValue>.+?)[\"']?\\s+",
        "ext_release: (?<currentValue>.+)\\s+"
      ],
      "versioningTemplate": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Prowlarr/Prowlarr"
    }
  ]
}
